@model LiveDinner.Models.Account

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout - Admin.cshtml";
}

<div class="container-fluid" style="margin-left:1%; margin-right:10%; font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; color:white">
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="col-lg-9">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Account_Id)

            <div class="row">
                <div class="col-lg-7" style="background-color:cadetblue">
                    <h4>Account Name</h4>
                    <p>
                        @Html.EditorFor(model => model.Account_Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Account_Name, "", new { @class = "text-danger" })
                    </p>
                    <h4>Account Address</h4>
                    <p>
                        @Html.EditorFor(model => model.Account_Address, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Account_Address, "", new { @class = "text-danger" })
                    </p>
                    <h4>Phone Number</h4>
                    <p>
                        @Html.EditorFor(model => model.Account_Phone_Number, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Account_Phone_Number, "", new { @class = "text-danger" })
                    </p>
                    <h4>
                        Account Email
                    </h4>
                    <p>
                        @Html.EditorFor(model => model.Account_Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Account_Email, "", new { @class = "text-danger" })
                    </p>
                    <h4>Account_Password</h4>
                    <p>
                        @Html.EditorFor(model => model.Account_Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Account_Password, "", new { @class = "text-danger" })
                    </p>
                    <h4>
                        Type
                    </h4>
                    <p>
                        @Html.EditorFor(model => model.Account_Type, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Account_Type, "", new { @class = "text-danger" })
                    </p>
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a href="@Url.Action("Index","Accounts")" class="btn btn-success">Back</a>
                </div>
            </div>
        </div>

    }
</div>










