@using LiveDinner.Models

@{
    Model1 db = new Model1();
    Account d = db.Accounts.FirstOrDefault();

    if (Session["Admin"] == null)
    {
        Response.Redirect("/Home/AdminLogin");
    }
    else
    {
        d = (Account)Session["Admin"];
    }
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Side</title>
    <!-- BOOTSTRAP STYLES-->
    <link href="~/Content/Admin_Site/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~/Content/Admin_Site/assets/css/font-awesome.css" rel="stylesheet" />
    <!-- MORRIS CHART STYLES-->
    <link href="~/Content/Admin_Site/assets/js/morris/morris-0.4.3.min.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="~/Content/Admin_Site/assets/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='~/Content/Admin_Site/http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("/IndexAdmin/Home")">@d.Account_Name
                <br />
                <h6>@d.Account_Email</h6><br />
                
                </a>
            </div>
            <div style="color: white;padding: 15px 50px 5px 50px;float: right;font-size: 16px;">  @System.DateTime.Now.ToLongDateString() @System.DateTime.Now.ToLongTimeString() &nbsp; <a href="@Url.Action("Logout","Home")" class="btn btn-danger square-btn-adjust">Logout</a> </div>
        </nav>
        <!-- /. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">
                    <li class="text-center">
                        <img src="~/Content/Admin_Site/assets/img/find_user.png" class="user-image img-responsive" />
                    </li>


                    <li>
                        <a class="active-menu" href="@Url.Action("IndexAdmin","Home")"><i class="fa fa-dashboard fa-3x"></i> Dashboard</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Companies")"><i class="fa fa-compass fa-3x"></i> Mnage Company</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Accounts")"><i class="fa fa-desktop fa-3x"></i> Mnage Account</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Categories")"><i class="fa fa-qrcode fa-3x"></i>Categories</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Sub_Category")"><i class="fa fa-bar-chart-o fa-3x"></i> Sub Category</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Products")"><i class="fa fa-table fa-3x"></i> Products</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Purchased","Purchased")"><i class="fa fa-edit fa-3x"></i>Purchased</a>
                    </li>


                    <li>
                        <a href="#"><i class="fa fa-sitemap fa-3x"></i>Reports<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="@Url.Action("StockReport","Reports")">Stock Reports</a>
                            </li>
                            <li>
                                <a href="@Url.Action("ProfitAndLossReport","Reports")">Profit& Loss Reports </a>
                            </li>
                            <li>
                                <a href="#">Transaction Reports<span class="fa arrow"></span></a>
                                <ul class="nav nav-third-level">
                                    <li>
                                        <a href="@Url.Action("PurchaseReport","Reports")">Purchased Reports</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("SaleReport","Reports")">Sale Reports</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                   
                </ul>

            </div>

        </nav>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper" style="background-color:black">
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                        <h2 style="text-align:center; font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">Admin Dashboard</h2>
                        <h5 style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">Welcome @d.Account_Name , Love to see you back. </h5>
                    </div>
                </div>
                @RenderBody()
                <!-- /. ROW  -->
            </div>
            <!-- /. PAGE INNER  -->
        </div>
        <!-- /. PAGE WRAPPER  -->
    </div>
    <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <script src="~/Content/Admin_Site/assets/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="~/Content/Admin_Site/assets/js/bootstrap.min.js"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="~/Content/Admin_Site/assets/js/jquery.metisMenu.js"></script>
    <!-- MORRIS CHART SCRIPTS -->
    <script src="~/Content/Admin_Site/assets/js/morris/raphael-2.1.0.min.js"></script>
    <script src="~/Content/Admin_Site/assets/js/morris/morris.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="~/Content/Admin_Site/assets/js/custom.js"></script>


</body>
</html>