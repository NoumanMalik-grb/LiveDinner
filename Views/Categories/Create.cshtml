@model LiveDinner.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout - Admin.cshtml";
}

<div class="class=" container-fluid" style="margin-left:1%; margin-right:10%; font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;background-color:cadetblue">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="col-lg-9">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col-lg-7" style="background-color:cadetblue">
                    <h4>Category Name</h4>
                    <p>
                        @Html.EditorFor(model => model.Category_Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Category_Name, "", new { @class = "text-danger" })
                    </p>
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a href="@Url.Action("Index","Categories")" class="btn btn-success">Back</a>
                </div>
            </div>
        </div>
    }
</div>

