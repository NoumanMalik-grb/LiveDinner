@model IEnumerable<LiveDinner.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout - Admin.cshtml";
}

<p>
    <a href="@Url.Action("Create","Categories")" class="btn btn-success">Create</a>
</p>
<div class="table table-responsive table-responsive-lg table-responsive-md table-responsive-sm table-responsive-xl">
    <table class="table table-sm-12 table-md-12 table-lg-12 table-xl-12 table-bordered table-active"style="width:40%; background-color:cadetblue; color:white; font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; text-align:center">
        <tr style=" background-color:crimson; color:white">
            <th>
                Category_Name
            </th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr style="color:forestgreen">
                <td>
                    @Html.DisplayFor(modelItem => item.Category_Name)
                </td>
                <td>
                    <a href="@Url.Action("Edit","Categories", new {id=item.Category_Id })" class="glyphicon glyphicon-edit btn-lg" style="color:blue"></a>
                    <a href="@Url.Action("Details","Categories", new {id=item.Category_Id})" class="glyphicon glyphicon-info-sign btn-lg" style="color:forestgreen"></a>
                    <a href="@Url.Action("delete","Categories", new {id=item.Category_Id})" class="fa fa-trash-o btn-lg" style="color:red"></a>
                </td>
            </tr>
        }

    </table>
</div>